                        FontSize="12" Padding="6" TextWrapping="Wrap" Width="500"/>
            
             <!--cuadrados-->
            <StackPanel Name="stkp_cuadrados" Orientation="Horizontal">
                <Rectangle Name="rgl_Azul" Fill="Blue" Height="200"  Width="200"  />
                
