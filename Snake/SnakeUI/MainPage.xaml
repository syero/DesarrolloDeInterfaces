<Page
    x:Class="SnakeUI.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SnakeUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:SnakeUI.ViewModels"
    mc:Ignorable="d">

    <Grid Background="Azure">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="200" />
            <RowDefinition Height="200" />
        </Grid.RowDefinitions>

        <ListView Name="ListadoMapas" Grid.Column="1" Grid.Row="0"  ItemsSource="{Binding ListaMapas}"  SelectedItem="{Binding MapaSeleccionado,Mode=TwoWay}" Background="AliceBlue">
            <ListView.ItemTemplate>
                <DataTemplate >
                    <StackPanel Orientation="Horizontal" Padding="5" Margin="5">
                        <TextBlock Name="txtBlck_NombreMapa" Text="{Binding NombreMapa}" />
                        <TextBlock Name="txtBlck_PuntuacionMapa" Text="{Binding ValoracionMapa}" />
                        <TextBlock Name="txtBlck_CreadorMapa" Text="{Binding NombreUsuario}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>
</Page>
